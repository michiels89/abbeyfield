{% if block.image|length %}
    {% if settings.section is not defined  %}
        {% if block['backgroundColor'] is defined %}
            {% set class = 'block block--panel block--' ~block.backgroundColor %}
        {% endif %}
    {% else %}
        {% set class = 'block' %}
    {% endif %}

    <div class="{{ class }}">
        <div class="grid">
            <div class="grid__12">
                <h2>{{ block.titel }}</h2>
                {{ assets.renderSrcset(block.image, 'grid__12') }}
            </div>
        </div>
    </div>
    <div class="spacer">
        {% if block.cta|length %}
            <div class="inline">
                {% for cta in block.cta.find() %}
                    {% include '_snippet/_content/_block/_cta' %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endif %}
