{% if entry.hero|length and entry.hero.image|length %}
    <div class="hero{% if entry.hero.textColor == 'light' %} hero--light{% endif %}" style="background-image: url('{{ entry.hero.image.first.geturl('hero') }}')">
        <div class="container">
            {% if entry.hero.heading %}
                <div class="hero__title">{{ entry.hero.heading }}</div>
            {% endif %}
            {% if entry.hero.description %}
                <div class="hero__body">{{ entry.hero.description }}
                    {% if entry.hero.button %}
                    <a class="button btn" href="{{ entry.hero.button }}">Doe mee<span></span></a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
