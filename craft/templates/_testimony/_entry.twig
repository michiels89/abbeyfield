{% extends "_layout" %}
{% import '_macro/_pager' as pagination %}
{% import '_macro/_assets' as assets %}

{% set breadcrumbs = [
    craft.entries.section('inhabitants').first(),
    entry,
] %}

{% block content %}
    <div class="container testimony">
        <div class="grid">
            <div class="grid__12 grid--bp-med__3">
                {% include '_asideNav' with {'inhabitant': true} %}
            </div>
            <div class="grid__12 grid--bp-med__9">
                <div class="section section--default">
                    <div class="container">
                        {% include '_snippet/_content/_pageTitle' %}
                        {% include '_snippet/_content/_intro' %}
                    </div>
                </div>

                <div class="section">
                    <div class="container ">
                        <div>
                            {% set entries = craft.entries.section('testimony').order('postDate DESC') %}
                            {% paginate entries.limit(10) as pageInfo, testimonies %}

                            <div class="section">
                                <div class="container ">
                                    {% include '_snippet/_item/_testimony' %}
                                </div>
                                    {{ pagination.pager(pageInfo) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

