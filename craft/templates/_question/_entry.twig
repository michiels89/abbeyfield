{% import '_macro/_pager' as pagination %}
{% import '_macro/_assets' as assets %}

{% extends "_layout" %}

{% set breadcrumbs = [
    entry,
] %}

{% block content %}

    <div class="container">
        <div class="grid">
            <div class="grid__12 grid--bp-med__3">
                {% include '_asideNav' with {'contact': true} %}
            </div>
            <div class="grid__12 grid--bp-med__9">
                <div class="section section--default">
                    <div class="container">
                        {% include '_snippet/_content/_pageTitle' %}
                        {#{% include '_snippet/_content/_intro' %}#}
                    </div>
                </div>

                {% set entries = craft.entries.section('question').order('postDate DESC') %}
                {% paginate entries.limit(10) as pageInfo, questions %}

                <div class="section">
                    <div class="container ">
                        <div id="question" class="question" onClick="active">
                            {% for question in questions %}
                                <div class="wrapper">

                                    <a href="">
                                        <span></span>{{ question.title }}
                                    </a>
                                    <div>
                                        {{ question.intro }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {{ pagination.pager(pageInfo) }}
                    </div>
                </div>
            </div>
        </div>
    </div>




    {#<script>#}
    {#function active() {#}
       {#var element = document.getElementById("question");#}
       {#element.classList.add("active");#}
    {#}#}
    {#</script>#}

{% endblock %}



